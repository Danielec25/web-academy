    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <img src="{{product.image}}" class="img-fluid rounded" alt="{{product.title}}">
            </div>
            <div class="col-md-6">
                <h1>{{product.title}}</h1>
                <p class="lead">{{product.description}}</p>
                <hr>
                <p><strong>Categoria:</strong> {{product.category}}</p>
                <h3><strong>Preço:</strong> R$ {{product.price}}</h3>
                <a href="/" class="btn btn-secondary mt-3">Voltar à Listagem</a>
            </div>
        </div>
    </div>
    
